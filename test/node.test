
var resource  = include;
UTest({
	
	'include': function(done){

		resource
			.js('lib/.package::Lib')
			.done(function(resp){

				eq(resp.Lib.A, 'A');
				eq(resp.Lib.B, 'B');
				eq(resp.Lib.C, 'C');
				done();
			});
	},

	'include - root only': function(done){

		resource
			.js('lib/*.js.package::Lib')
			.done(function(resp){

				eq(resp.Lib.A, 'A');
				eq(resp.Lib.B, 'B');
				eq(resp.Lib.C, null);
				done();
			});
	},
	
	'io.File.read': function(){
		
		var file = new io.File('./lib/.package');
		
		eq(file.exists(), true);
		
		
		var content = file.read();
		
		assert(content.indexOf('A.js') !== -1);
		assert(content.indexOf('B.js') !== -1);
	}
});